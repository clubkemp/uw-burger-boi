<div class="head">
  <h1>Burger Boi!</h1>
</div>

<div class="pure-g">
    <div class="pure-u-1-3 l-box">
          <h2>Burgers waiting to be eaten</h2>
      
            {{#each burgers}}
              {{#unless devoured}}
              <p>
                {{name}}<button class="eat" data-id="{{id}}">EAT!</button>
              </p>
              {{/unless}}
            {{/each}}
          </ul>    
    </div>
    <div class="pure-u-1-3 l-box center">
      <img  src="/assets/imgs/burgerBoi.jpg" alt="">
      <h2>Fancy a burger?</h2>
      
      <form class="pure-form create-form">
        <fieldset>
          <legend>Add a burger</legend>
          <input type="text" id="burger" name="name" placeholder="Burger Name">
          <button type="submit">Add burger</button>
        </fieldset>
      </form>

    </div>
    <div class="pure-u-1-3 l-box right">
      <h2>Burgers eaten</h2>

        {{#each burgers}}
          {{#if devoured}}
          <p>
            {{name}}  
          </p>  
          {{/if}}
        {{/each}}
    
    </div>
</div>










